@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-body p-5">
            <h2 class="text-center mb-4">Welcome to the Admin Dashboard</h2>
            <p class="lead text-center">Manage your Booking Hotels Site with ease using the features provided below.</p>

            <div class="row mt-4">
                <!-- Home -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-home fa-2x mb-3"></i>
                            <h5 class="card-title">Home</h5>
                            <p class="card-text">Go to the home page</p>
                            <br />
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Go</a>
                        </div>
                    </div>
                </div>

                <!-- Add New Admin -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-user-plus fa-2x mb-3"></i>
                            <h5 class="card-title">Add New Admin</h5>
                            <p class="card-text">Register new administrators to help manage the site.</p>
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light">Add</a>
                        </div>
                    </div>
                </div>

                <!-- New Contacts -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-envelope fa-2x mb-3"></i>
                            <h5 class="card-title">New Contacts</h5>
                            <p class="card-text">View new user messages and respond to them.</p>
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="NewContacts" class="btn btn-outline-light">View</a>
                        </div>
                    </div>
                </div>

                <!-- Contact History -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-envelope fa-2x mb-3"></i>
                            <h5 class="card-title">Contact History</h5>
                            <p class="card-text">Review all past user contacts and responses.</p>
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="ContactsHistory" class="btn btn-outline-light">View History</a>
                        </div>
                    </div>
                </div>

                <!-- Hotel Request -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-hotel fa-2x mb-3"></i>
                            <h5 class="card-title">Hotel Requests</h5>
                            <p class="card-text">Review and approve hotel requests.</p>
                            <br />
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="NewHotelRequest" class="btn btn-outline-light">Manage</a>
                        </div>
                    </div>
                </div>

                <!-- Hotel Request History -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-hotel fa-2x mb-3"></i>
                            <h5 class="card-title">Hotel Request History</h5>
                            <p class="card-text">Review all past hotel requests and approvals.</p>
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="HotelRequestHistory" class="btn btn-outline-light">View History</a>
                        </div>
                    </div>
                </div>

                <!-- Hotel List -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-hotel fa-2x mb-3"></i>
                            <h5 class="card-title">Hotel List</h5>
                            <p class="card-text">Manage and view all registered hotels.</p>
                            <br />
                            <a asp-area="Admin" asp-controller="HotelAdminManagement" asp-action="HotelList" class="btn btn-outline-light">View List</a>
                        </div>
                    </div>
                </div>

                <!-- All Reservations -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-concierge-bell fa-2x mb-3"></i>
                            <h5 class="card-title">All Reservations</h5>
                            <p class="card-text">Manage all hotel reservations.</p>
                            <br />
                            <a asp-area="Admin" asp-controller="Reservation" asp-action="AllResrevationHotel" class="btn btn-outline-light">Manage</a>
                        </div>
                    </div>
                </div>

                <!-- All Reviews -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 text-center bg-dark text-white">
                        <div class="card-body">
                            <i class="fas fa-star fa-2x mb-3"></i>
                            <h5 class="card-title">All Reviews</h5>
                            <p class="card-text">Check all user reviews and respond.</p>
                            <br />
                            <a asp-area="Admin" asp-controller="Review" asp-action="Reviews" class="btn btn-outline-light">Manage</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
