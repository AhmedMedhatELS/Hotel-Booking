@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Dashboard Title -->
<div class="container mt-4">
    <h1 class="text-center mb-4">Welcome to the Admin Dashboard</h1>

    <!-- Dashboard Overview Cards -->
    <div class="row">
        <!-- Total Hotels -->
        <div class="col-md-4 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Hotels</h5>
                    <p class="card-text">123</p> <!-- Replace with dynamic value -->
                </div>
                <div class="card-footer bg-primary text-white">
                    <a href="@Url.Action("Hotels", "Dashboard")" class="text-white">View Details</a>
                </div>
            </div>
        </div>

        <!-- Pending Requests -->
        <div class="col-md-4 mb-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Pending Requests</h5>
                    <p class="card-text">45</p> <!-- Replace with dynamic value -->
                </div>
                <div class="card-footer bg-warning text-dark">
                    <a href="@Url.Action("PendingRequests", "Dashboard")" class="text-dark">View Details</a>
                </div>
            </div>
        </div>

        <!-- Total Users -->
        <div class="col-md-4 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text">789</p> <!-- Replace with dynamic value -->
                </div>
                <div class="card-footer bg-success text-white">
                    <a href="@Url.Action("Users", "Dashboard")" class="text-white">View Details</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Statistics -->
    <div class="row">
        <!-- Sales Chart (Placeholder) -->
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Sales Overview</h5>
                </div>
                <div class="card-body">
                    <!-- Placeholder for chart -->
                    <div id="salesChart" style="height: 300px;"></div>
                </div>
            </div>
        </div>

        <!-- User Activity (Placeholder) -->
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">User Activity</h5>
                </div>
                <div class="card-body">
                    <!-- Placeholder for activity chart -->
                    <div id="userActivityChart" style="height: 300px;"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Notifications -->
    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Recent Notifications</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">Hotel XYZ has a new booking request.</li>
                        <li class="list-group-item">User ABC updated their profile.</li>
                        <li class="list-group-item">New feedback received for Hotel DEF.</li>
                        <!-- Add more notifications dynamically -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

