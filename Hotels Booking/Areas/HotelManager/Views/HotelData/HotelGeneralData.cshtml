@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Models.Hotel

@{
    Layout = "_Dashboard";
    ViewData["Title"] = "Hotel General Data";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
    <form asp-area="HotelManager" asp-controller="HotelData" asp-action="EditHotel" method="post">
        <div class="mb-3">
            <label asp-for="HotelName" class="form-label">Hotel Name</label>
            <input asp-for="HotelName" class="form-control shadow-sm" placeholder="Enter hotel name" />
            <span asp-validation-for="HotelName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Stars" class="form-label">Stars</label>
            <input asp-for="Stars" type="number" class="form-control shadow-sm" placeholder="Enter number of stars" />
            <span asp-validation-for="Stars" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LocationLink" class="form-label">Location Link</label>
            <input asp-for="LocationLink" class="form-control shadow-sm" placeholder="Enter location link" />
            <span asp-validation-for="LocationLink" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control shadow-sm" placeholder="Enter address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="stateId" class="form-label">Country, State</label>
            <select id="stateId" name="StateId" class="form-select shadow-sm">
                @{
                    var States = ViewData["states"] as List<Models.State>;
                    if (States != null)
                    {
                        foreach (var state in States)
                        {
                            if (state.StateId == Model.StateId)
                            {
                                <option selected value="@state.StateId">
                                    @(state.Country?.Name), @state.Name
                                </option>
                            }
                            else
                            {
                                <option value="@state.StateId">
                                    @(state.Country?.Name), @state.Name
                                </option>
                            }
                        }
                    }
                }
            </select>
            <span asp-validation-for="StateId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HotelHotLine" class="form-label">Hotel Hotline</label>
            <input asp-for="HotelHotLine" class="form-control shadow-sm" placeholder="Enter hotel hotline" />
            <span asp-validation-for="HotelHotLine" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HotelContactEmail" class="form-label">Hotel Contact Email</label>
            <input asp-for="HotelContactEmail" class="form-control shadow-sm" placeholder="Enter hotel email" />
            <span asp-validation-for="HotelContactEmail" class="text-danger"></span>
        </div>

        <div class="text-end" >
            <button type="submit" class="btn btn-dark">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
