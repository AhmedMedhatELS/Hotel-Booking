@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <div class="card shadow-sm">
        <div class="card-body">  
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-3">
                <button class="btn btn-dark btn-lg w-100" type="submit">Download Data</button>
            </form>
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger btn-lg w-100">Delete Account</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
